<header class="sticky top-0 z-10 h-16 px-2 flex items-center shadow bg-white">
    <div id="search-container" class="relative w-full hidden animate-slideDown">
        <div class="flex items-center justify-between p-1">
            <div class="mt-0.5 w-5">
                <i class="fas fa-search"></i>
            </div>
            <input id="search-input" type="text" placeholder="Search sidebar..."
                class="mx-3 flex-1 border-none focus:outline-none text-lg" />
            <button id="close-search"
                class="bg-transparent shadow-none text-black hover:bg-gray-200 rounded hover:cursor-pointer p-1">
                <i class="fas fa-times w-5 h-5"></i>
            </button>
        </div>
        <div id="search-results"
            class="absolute top-full left-0 right-0 bg-white shadow border-none rounded mt-5 p-2 overflow-auto z-10 hidden">
            <!-- Search results will be populated here via JavaScript -->
        </div>
    </div>

    <div id="header-content" class="flex justify-between w-full items-center">
        <!-- Left side: Sidebar trigger & Search button -->
        <div class="flex items-center gap-3">
            <button id="hide-menu"
                class="bg-transparent shadow-none text-black hover:bg-gray-200 rounded hover:cursor-pointer p-2 transition-opacity duration-200 ease-in-out">
                <i
                    class="fa-solid fa-arrow-left w-5 h-5 transform transition-transform duration-200 ease-in-out hover:-translate-x-0.5"></i>
            </button>
            <button id="show-menu"
                class="hidden bg-transparent shadow-none text-black hover:bg-gray-200 rounded hover:cursor-pointer p-2 transition-opacity duration-200 ease-in-out">
                <i
                    class="fa-solid fa-bars w-5 h-5 transform transition-transform duration-200 ease-in-out hover:translate-x-0.5"></i>
            </button>
            <button id="search-toggle"
                class="bg-transparent shadow-none text-black hover:bg-gray-200 rounded hover:cursor-pointer p-2">
                <i class="fas fa-search w-5 h-5"></i>
                <span class="sr-only">Search</span>
            </button>
        </div>

        <!-- Right side: Welcome text, user avatar, notifications -->
        <div class="flex items-center gap-3">
            <div
                class="bg-transparent shadow-none text-black hover:bg-gray-200 rounded hover:cursor-pointer py-1.5 px-2">
                <span class="font-semibold">Welcome / Admin</span>
            </div>

            <!-- Profile dropdown -->
            <div class="relative">
                <div class="w-8 h-8 flex items-center justify-center rounded-full bg-gray-200 cursor-pointer"
                    id="profile-icon">
                    <i class="fas fa-user"></i>
                </div>
                <div id="profile-menu"
                    class="mt-1 absolute top-full right-0 bg-white border border-gray-200 rounded shadow-md w-48 z-50 hidden transition-all duration-200 ease-in-out transform -translate-y-1 opacity-0">
                    <a href="/profile" class="flex items-center gap-3 p-2 hover:bg-gray-100">
                        <div class="">
                            <i class="fas fa-user-circle"></i>
                        </div>
                        <span>Profile</span>
                    </a>
                    <div class="border-t border-gray-200"></div>
                    <button id="profile-logout-btn"
                        class="flex items-center gap-3 p-2 hover:bg-gray-100 w-full text-left cursor-pointer">
                        <div>
                            <i class="fas fa-sign-out-alt"></i>
                        </div>
                        <span>Logout</span>
                    </button>
                </div>
            </div>

            <!-- Notifications -->
            <div id="notification-container" class="relative">
                <!-- Notification Bell Button -->
                <button id="notification-bell"
                    class="bg-transparent shadow-none text-black hover:bg-gray-200 rounded hover:cursor-pointer p-2">
                    <i class="fas fa-bell text-xl"></i>
                    <!-- Unread count badge; hidden by default -->
                    <span id="notification-count"
                        class="flex absolute top-0 right-0 items-center justify-center px-1 text-xs text-white bg-red-600 rounded-full"></span>
                </button>

                <!-- Dropdown Content -->
                <div id="notification-dropdown"
                    class="hidden absolute right-0 mt-2 w-80 bg-white border border-gray-200 rounded shadow-xl z-50">
                    <!-- Dropdown Header -->
                    <div class="px-4 py-3 border-b border-gray-200 bg-white flex items-center justify-between rounded-t">
                        <h2 class="font-semibold text-sm">NOTIFICATIONS</h2>
                        <button id="mark-all-read"
                            class="text-sm font-medium text-blue-600 hover:underline cursor-pointer">Mark All
                            Read</button>
                    </div>
                    <!-- Notification List -->
                    <div id="notification-list" class="max-h-72 overflow-y-auto bg-white">
                        <div class="px-4 py-3 text-sm text-gray-500">Loading notifications...</div>
                    </div>
                    <!-- Dropdown Footer -->
                    <div class="px-4 py-3 border-t border-gray-200 bg-white flex items-center justify-end rounded-b">
                        <button id="delete-all"
                            class="text-sm font-medium text-blue-600 hover:underline cursor-pointer">Clear All</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</header>