<% title="Dashboard - Zendo Admin" %>

    <div class="flex h-screen overflow-hidden">
        <!-- Sidebar -->
        <aside id="sidebar"
            class="bg-white max-w-[300px] w-full h-full overflow-y-auto transition-transform duration-300 md:translate-x-0 -translate-x-full md:block border-r">
            <!-- Logo / Title -->
            <div class="p-4 border-b">
                <div class="flex items-center gap-3">
                    <img src="/images/logo.png" alt="Logo" class="w-9 h-9 rounded-full" />
                    <h1 class="text-xl font-bold">Zendo Admin</h1>
                </div>
            </div>

            <!-- Navigation -->
            <nav class="p-4">
                <!-- Dashboard -->
                <a href="/dashboard" class="flex items-center gap-3 p-2 rounded hover:bg-gray-100 mb-1">
                    <i class="fas fa-th-large"></i>
                    <span class="font-medium">Dashboard</span>
                </a>

                <!-- User Management -->
                <div class="mb-1">
                    <details class="group">
                        <summary class="flex items-center gap-3 p-2 rounded hover:bg-gray-100 cursor-pointer">
                            <i class="fas fa-users"></i>
                            <span class="font-medium">User Management</span>
                            <svg class="ml-auto transition-transform group-open:rotate-90 w-4 h-4"
                                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m9 18 6-6-6-6" />
                            </svg>
                        </summary>
                        <ul class="mt-2 space-y-1 pl-4">
                            <li>
                                <a href="/user/profiles" class="flex items-center gap-3 p-2 rounded hover:bg-gray-100">
                                    <span>User Profiles</span>
                                </a>
                            </li>
                            <li>
                                <a href="/user/activity" class="flex items-center gap-3 p-2 rounded hover:bg-gray-100">
                                    <span>User Activity</span>
                                </a>
                            </li>
                        </ul>
                    </details>
                </div>

                <!-- Content Management -->
                <a href="/content" class="flex items-center gap-3 p-2 rounded hover:bg-gray-100 mb-1">
                    <i class="fas fa-file-alt w-5 h-5"></i>
                    <span class="font-medium">Content Management</span>
                </a>

                <!-- AI Rendering Oversight -->
                <div class="mb-1">
                    <details class="group">
                        <summary class="flex items-center gap-3 p-2 rounded hover:bg-gray-100 cursor-pointer">
                            <i class="fas fa-cogs w-5 h-5"></i>
                            <span class="font-medium">AI Rendering Oversight</span>
                            <svg class="ml-auto transition-transform group-open:rotate-90 w-4 h-4"
                                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m9 18 6-6-6-6" />
                            </svg>
                        </summary>
                        <ul class="mt-2 space-y-1 pl-4">
                            <li>
                                <a href="/ai/rendering/image"
                                    class="flex items-center gap-3 p-2 rounded hover:bg-gray-100">
                                    <i class="fas fa-image w-4 h-4"></i>
                                    <span>AI Rendering Image</span>
                                </a>
                            </li>
                            <li>
                                <a href="/ai/furniture-finder"
                                    class="flex items-center gap-3 p-2 rounded hover:bg-gray-100">
                                    <i class="fas fa-couch w-4 h-4"></i>
                                    <span>Furniture Finder Data</span>
                                </a>
                            </li>
                        </ul>
                    </details>
                </div>

                <!-- Customer Support -->
                <a href="/customer-support" class="flex items-center gap-3 p-2 rounded hover:bg-gray-100 mb-1">
                    <i class="fas fa-headset w-5 h-5"></i>
                    <span class="font-medium">Customer Support</span>
                </a>

                <!-- Security and Payments -->
                <div class="mb-1">
                    <details class="group">
                        <summary class="flex items-center gap-3 p-2 rounded hover:bg-gray-100 cursor-pointer">
                            <i class="fas fa-credit-card w-5 h-5"></i>
                            <span class="font-medium">Security and Payments</span>
                            <svg class="ml-auto transition-transform group-open:rotate-90 w-4 h-4"
                                xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round"
                                    stroke-width="2" d="m9 18 6-6-6-6" />
                            </svg>
                        </summary>
                        <ul class="mt-2 space-y-1 pl-4">
                            <li>
                                <a href="/transactions" class="flex items-center gap-3 p-2 rounded hover:bg-gray-100">
                                    <i class="fas fa-exchange-alt w-4 h-4"></i>
                                    <span>Transaction Management</span>
                                </a>
                            </li>
                        </ul>
                    </details>
                </div>
            </nav>

            <!-- Logout button -->
            <div class="absolute bottom-0 w-full p-4 border-t bg-white">
                <button class="w-full p-2 rounded hover:bg-gray-100 flex items-center gap-3">
                    <i class="fas fa-sign-out-alt w-5 h-5"></i>
                    <span>Logout</span>
                </button>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="flex-1 flex flex-col overflow-hidden">
            <!-- Header -->
            <header class="sticky top-0 bg-white border-b p-4 z-10">
                <div class="flex justify-between items-center">
                    <!-- Left side: toggle + search -->
                    <div class="flex items-center gap-4">
                        <!-- Mobile menu toggle -->
                        <button id="menu-toggle" class="md:hidden p-2 rounded hover:bg-gray-100">
                            <i class="fas fa-bars w-5 h-5"></i>
                        </button>

                        <!-- Back button -->
                        <button class="p-2 rounded hover:bg-gray-100">
                            <i class="fas fa-arrow-left w-5 h-5"></i>
                        </button>

                        <!-- Search bar -->
                        <div class="relative hidden md:block">
                            <i
                                class="fas fa-search absolute right-3 top-1/2 transform -translate-y-1/2 w-4 h-4 text-black"></i>
                        </div>
                    </div>

                    <!-- Right side: user info -->
                    <div class="flex items-center gap-4">
                        <span>Welcome / Admin</span>
                        <!-- Notification bell -->
                        <div class="relative">
                            <button class="p-2 rounded-full hover:bg-gray-100">
                                <i class="fas fa-bell w-5 h-5"></i>
                            </button>
                        </div>

                        <!-- Profile indicator -->
                        <div class="relative">
                            <div class="h-2 w-2 bg-green-500 rounded-full absolute right-0"></div>
                        </div>
                    </div>
                </div>
            </header>

            <!-- Main area for pages -->
            <main class="p-6 overflow-y-auto flex-1">
                <!-- Dashboard Cards -->
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
                    <!-- User Management -->
                    <div class="bg-white p-8 shadow-sm rounded-md flex flex-col items-center justify-center">
                        <i class="fas fa-user text-4xl mb-4"></i>
                        <h3 class="text-center font-medium">User Management</h3>
                    </div>

                    <!-- Content Management -->
                    <div class="bg-white p-8 shadow-sm rounded-md flex flex-col items-center justify-center">
                        <i class="fas fa-clipboard-list text-4xl mb-4"></i>
                        <h3 class="text-center font-medium">Content Management</h3>
                    </div>

                    <!-- AI Rendering Oversight -->
                    <div class="bg-white p-8 shadow-sm rounded-md flex flex-col items-center justify-center">
                        <i class="fas fa-cog text-4xl mb-4"></i>
                        <h3 class="text-center font-medium">AI Rendering Oversight</h3>
                    </div>

                    <!-- Customer Support Management -->
                    <div class="bg-white p-8 shadow-sm rounded-md flex flex-col items-center justify-center">
                        <i class="fas fa-headset text-4xl mb-4"></i>
                        <h3 class="text-center font-medium">Customer Support Management</h3>
                    </div>

                    <!-- Security and Payments -->
                    <div class="bg-white p-8 shadow-sm rounded-md flex flex-col items-center justify-center">
                        <i class="fas fa-credit-card text-4xl mb-4"></i>
                        <h3 class="text-center font-medium">Security and Payments</h3>
                    </div>
                </div>
            </main>

            <!-- Footer -->
            <footer class="p-4 border-t">
                <div class="text-center text-gray-500">
                    &copy; 2025 Powered by
                    <a href="#" class="text-blue-500 hover:underline">Zendo</a>
                </div>
            </footer>
        </div>
    </div>

    <!-- Sidebar Toggle Script -->
    <script>
        document
            .getElementById("menu-toggle")
            .addEventListener("click", function () {
                document.getElementById("sidebar").classList.toggle("-translate-x-full");
            });
    </script>